#include <stdio.h>
void minmax(int arr[],int min,int max,int len)
{
	int *ptr=arr;
	 max=*ptr;
	 max=*ptr;
	for (int i=0;i<len;i++)
	{
		if(*(ptr+i)>max)
		{
			max=*(ptr+i);
		}
		if (*(ptr+i)<min)
		{
			min=*(ptr+i);
		}
	}
}
int main()
{
	int arr[9]={10,20,50,70,60,45,98,88,5};
	int len= sizeof (arr)/sizeof (arr[0]);
	minmax(arr,min,max,len);
	printf("minimum and maximum of array:%d %d ",max,min);
	return 0;
}





